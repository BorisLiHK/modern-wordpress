{
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress",
        "type": "webroot",
        "version": "4.9.2",
        "dist": {
          "type": "zip",
          "url": "https://github.com/WordPress/WordPress/archive/4.9.2.zip"
        },
        "require" : {
          "fancyguy/webroot-installer": "*"
        }
      }
    }
  ],

  "require": {
    "php": ">=7",
    "wordpress": "4.9.2",
    "fancyguy/webroot-installer": "1.1.*",
    "vlucas/phpdotenv": "2.4.*",
    "wpackagist-plugin/custom-post-type-ui": "1.5.*",
    "wpackagist-plugin/timber-library": "1.2.*",
    "wpackagist-plugin/advanced-custom-fields": "4.4.*",
    "roots/wp-password-bcrypt": "1.0.*"
  },
  "autoload": {
    "classmap": [],
    "psr-4": {
      "App\\": "src/themes/__/"
    }
  },
  "extra": {
    "installer-paths": {
      "src/plugins/{$name}/": ["type:wordpress-plugin"]
    },
    "webroot-dir": "wp",
    "webroot-package": "wordpress"
  }
}
